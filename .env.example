# Environment template (do not put real secrets in git). In production use Secret Manager / service env.

# Stripe
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=
# Optional marketing fields
STRIPE_PRODUCT_NAME=Luxury NYX - Full Access
STRIPE_PRODUCT_DESCRIPTION=Acceso completo • Descarga inmediata • Licencia comercial
STRIPE_PRODUCT_IMAGE_URL=
# Mode-specific IDs (recommended)
STRIPE_TEST_PRODUCT_ID=
STRIPE_TEST_PRICE_ID=
STRIPE_LIVE_PRODUCT_ID=
STRIPE_LIVE_PRICE_ID=
